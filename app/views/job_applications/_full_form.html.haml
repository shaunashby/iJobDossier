= form_for(@job_application, :url => pool_applications_path) do |f|
 %fieldset
  %legend Job Application Details
  - if @job_application.errors.any?
   %div#error_explanation
    %h2 #{pluralize(@job_application.errors.count, "error")} prohibited this job application from being saved:
    %ul
     - @job_application.errors.full_messages.each do |msg|
      %li #{msg}
  = f.label :jobtitle
  = f.text_field :jobtitle

  = f.label :jobref
  = f.text_field :jobref

  = f.label :deadline
  = f.date_select :deadline

  = f.label :submission
  = f.date_select :submission

  = f.label :status
  = f.text_field :status

 %fieldset
  %legend Dossier Notes
  = fields_for :dossier do |dossier|

   = dossier.label 'Dossier Notes'
   = dossier.text_area :notes, :rows => 4, :colummns => 6

 %fieldset
  %legend Application Target
  - if @application_target.errors.any?
   %div#error_explanation
    %h2 #{pluralize(@application_target.errors.count, "error")} prohibited this application target from being saved:
    %ul
     - @application_target.errors.full_messages.each do |msg|
      %li #{msg}
  = fields_for :application_target do |target|
   = target.label 'Target Company'
   = target.text_field :company

   = target.label :contact
   = target.text_field :contact

   = target.label :email
   = target.email_field :email

   = target.label :address
   = target.text_area :address, :rows => 3

   = target.label 'Notes about this company'
   = target.text_area :notes, :rows => 4

 .action
 = f.submit
